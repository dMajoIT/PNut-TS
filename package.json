{
  "name": "p2-pnut-ts",
  "version": "0.43.0",
  "description": "A Parallax Propeller 2 compiler in TypeScript",
  "main": "out/pnut-ts.js",
  "bin": {
    "pnut-ts": "./out/pnut-ts.js"
  },
  "pkg": {
    "assets": "out/ext/*",
    "targets": [
      "node18-win-arm64",
      "node18-win-x64",
      "node18-linux-x64",
      "node18-linux-arm64",
      "node18-macos-x64",
      "node18-macos-arm64"
    ],
    "outputPath": "pkgs"
  },
  "scripts": {
    "prepack": "npm run esbuild-base -- --minify",
    "esbuild-base": "npm run copy-ext && esbuild ./src/pnut-ts.ts  --bundle --outdir=./out --entry-names=[dir]/../out/[name] --format=cjs --platform=node && node scripts/insertBuildDate.js",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "prebuild": "mkdir -p dist/ext && ./scripts/prepExt",
    "copy-ext": "mkdir -p out/ext && ./scripts/prepExt out/ext",
    "build": "tsc && chmod +x dist/pnut-ts.js",
    "start": "npm run build && dist/pnut-ts.js",
    "help": "npm run build && dist/pnut-ts.js --help",
    "test": "npm run build && jest -c jest-config/jest-short-only-config.json",
    "test-full": "npm run build && jest -c jest-config/jest-full-config.json",
    "test-datpasm": "npm run build && jest -c jest-config/jest-datpasm-only-config.json",
    "test-dbg": "npm run build && jest -c jest-config/jest-dbg-only-config.json --verbose",
    "test-ext": "npm run build && jest -c jest-config/jest-ext-only-config.json --verbose",
    "test-full-only": "npm run build && jest -c jest-config/jest-full-only-config.json",
    "pretest": "npm run build && npm run lint",
    "watch": "tsc -b -w",
    "lint": "eslint ./src --ext .ts,.tsx",
    "prettier-format": "prettier --config .prettierrc.json 'src/**/*.ts' --write",
    "buildfortest": "npm run build && npm run esbuild && npm pack && pkg ."
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ironsheep/Pnut-ts-dev/tree/main"
  },
  "bugs": {
    "url": "https://github.com/ironsheep/Pnut-ts-dev/issues"
  },
  "keywords": [
    "cli",
    "propeller2",
    "parallax.com",
    "spin2",
    "pasm2",
    "compiler"
  ],
  "author": "Stephen M Moraco",
  "publisher": "IronSheepProductionsLLC",
  "license": "MIT",
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.4.19",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "esbuild": "^0.21.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard-with-typescript": "^43.0.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-promise": "^6.1.1",
    "glob": "^10.3.15",
    "jest": "^29.6.2",
    "jest-mock-console": "^2.0.0",
    "pkg": "^5.8.1",
    "ts-jest": "^29.1.5",
    "typescript": "^5.5.2"
  },
  "dependencies": {
    "commander": "^12.0.0"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
